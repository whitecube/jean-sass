{
  "name": "@whitecube/white-sass",
  "version": "0.0.1",
  "description": "Rework white-sass",
  "bin": "bin/cli.js",
  "main": "./src/sass/_index.scss",
  "exports": {
    ".": {
      "sass": "./src/sass/_index.scss"
    },
    "./tools": {
      "sass": "./src/sass/tools/_tools.scss"
    },
    "./tools/mixins/*": {
      "sass": "./src/sass/tools/mixins/*.scss"
    },
    "./tools/functions/*": {
      "sass": "./src/sass/tools/functions/*.scss"
    },
    "./config": {
      "sass": "./src/sass/lib/config.scss"
    }
  },
  "scripts": {
    "build": "sass src/sass/_index.scss dist/index.css --style=compressed",
    "test": "sass tests/sass/app.scss tests/dist/index.css --style=compressed",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/whitecube/white-sass.git"
  },
  "keywords": [
    "sass"
  ],
  "author": "Whitecube",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/whitecube/white-sass/issues"
  },
  "homepage": "https://github.com/whitecube/white-sass#readme",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.0",
    "sass": "^1.84.0"
  },
  "lint-staged": {
    "*.{js,scss,json,md}": "prettier --write"
  }
}
