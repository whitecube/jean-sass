{
  "name": "@whitecube/white-sass",
  "version": "0.0.1",
  "description": "Rework white-sass",
  "main": "./src/_index.scss",
  "exports": {
    ".": {
      "sass": "./src/_index.scss"
    },
    "./tools": {
      "sass": "./src/tools/_tools.scss"
    },
    "./config/breakpoints": {
      "sass": "./src/config/breakpoints.scss"
    },
    "./config/colors": {
      "sass": "./src/config/colors.scss"
    },
    "./config/fonts": {
      "sass": "./src/config/_fonts.scss"
    },
    "./config/global": {
      "sass": "./src/config/_global.scss"
    },
    "./config/grid": {
      "sass": "./src/config/_grid.scss"
    },
    "./config/icons": {
      "sass": "./src/config/_icons.scss"
    },
    "./config/typography": {
      "sass": "./src/config/_typography.scss"
    }
  },
  "scripts": {
    "build": "sass src/_index.scss dist/index.css --style=compressed",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/whitecube/white-sass.git"
  },
  "keywords": [
    "sass"
  ],
  "author": "Whitecube",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/whitecube/white-sass/issues"
  },
  "homepage": "https://github.com/whitecube/white-sass#readme",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.0",
    "sass": "^1.84.0"
  },
  "lint-staged": {
    "src/*.{js,scss,json}": "prettier --write"
  }
}